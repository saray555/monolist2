<div class="ranking">
  <div class = "container "> 

   <h1 class= "block" style="margin-bottom:1em;"> <%= @title %> </h1>
   
   <% if @items.present? %>
    <% rank = 1 %>    
   <% items.each do |item| %>
     <div class="row">
    <!--
    <div class="col-md-6 .col-md-offset-3">
    -->
    
    <div class="col-sm-offset-4 col-xs-8 ">
    <div class="rankinglist">
       <div class = "rank col-md-1" align="center"> 
       <%= render partial: 'rank' , locals: {rank: rank} %>
       </div>
       <div class="col-md-2">
        <%= image_tag(item.medium_image) %>
       </div>
       <div class="item-col-md-8">
         <%= item.title %><br> 
         <%= link_to('楽天詳細ページへ', item.detail_page_url) %>
       </div>
        </div>
     </div>
   </div>
   <% rank +=  1 %>
   <hr>
   
    <% end %>
     <% end %>
  </div>
</div>
